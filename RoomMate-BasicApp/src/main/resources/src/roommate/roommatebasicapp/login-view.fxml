<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="src.roommate.roommatebasicapp.LoginController"
            prefWidth="300" prefHeight="700">

  <VBox alignment="CENTER" spacing="10"
        AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
        AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

    <!-- Titlu -->
    <Label text="RoomMate" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Câmp pentru Username -->
    <Label text="Username:" />
    <TextField fx:id="usernameTextField" promptText="Enter username" maxWidth="250" />

    <!-- Câmp pentru Password -->
    <Label text="Password:" />
    <PasswordField fx:id="passwordTextField" promptText="Enter password" maxWidth="250" />

    <!-- Butoane -->
    <Button fx:id="loginButton" text="Login" onAction="#onLoginButtonClick" maxWidth="150" />
    <Button fx:id="registerButton" text="Register" onAction="#onRegisterButtonClick" maxWidth="150" />

  </VBox>

</AnchorPane>
